<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.ThunderWeaponFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:titleTextAppearance="@style/Toolbar.TitleText"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            app:cardBackgroundColor="#EDBD8B"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/leading_element" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="20dp"
                        android:text="@string/yh"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/button1"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/button2"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/button1" />

        <ImageView
            android:id="@+id/action_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/media18"
            app:layout_constraintTop_toBottomOf="@id/button2"
            tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/roboto_regular"
                android:lineHeight="36dp"
                android:text="@string/ur"
                android:textColor="#1C1B1F"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@id/action_image" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="26dp"
                android:lineHeight="20dp"
                android:text="@string/minecraft_n_n_thunder_weapons_3"
                android:textColor="#394231"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/text" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="24dp"
            android:text="@string/b"
            android:textColor="#1C1B1F"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/text2" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="20dp"
            android:text="@string/_15_n_n_n"
            android:textColor="#394231"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/text3" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/media19"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/text4" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/media20"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="24dp"
            android:text="@string/hhh4"
            android:textColor="#1C1B1F"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/layout1" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="20dp"
            android:text="@string/n_12_n_n_n"
            android:textColor="#394231"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/text5" />

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/media21"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/text6" />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/media22"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout2" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="24dp"
            android:text="@string/hhh6"
            android:textColor="#1C1B1F"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/layout3" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="20dp"
            android:text="@string/n_14_n_10_n_n_n"
            android:textColor="#394231"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/text7" />

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/media23"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/text8" />

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/media24"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout4" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="24dp"
            android:text="@string/oi"
            android:textColor="#1C1B1F"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/layout5" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
